}
#portfolio #desc_portfolio .cat{
	color: #aca9a9;
	font-size: 11px;
	font-weight: 100;
	font-family: "Helvetica", "Arial";
	line-height: 13px;
	margin-top: 20px;
}
#portfolio #desc_portfolio .category{
	color: #23acb9;
	font-size: 14px;
	font-family: "Helvetica", "Arial";
